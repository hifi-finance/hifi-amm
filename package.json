  },
  "bugs": {
    "url": "https://github.com/hifi-finance/hifi-amm/issues"
  },
  "dependencies": {
    "@paulrberg/contracts": "^3.2.1",
    "prb-math": "^2.0.1"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ethersproject/abi": "^5.3.1",
    "@ethersproject/abstract-provider": "^5.3.0",
    "@ethersproject/abstract-signer": "^5.3.0",
    "@ethersproject/bignumber": "^5.3.0",
    "@ethersproject/bytes": "^5.3.0",
    "@ethersproject/providers": "^5.3.1",
    "@ethersproject/wallet": "^5.3.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.0.2",
    "@types/chai": "^4.2.19",
    "@types/fs-extra": "^9.0.11",
    "@types/mocha": "^8.2.2",
    "@types/mocha-each": "^2.0.0",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.3.1",
    "evm-fp": "^1.1.2",
    "from-exponential": "^1.1.1",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.4.0",
    "husky": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mathjs": "^9.4.2",
    "mocha": "^9.0.1",
    "mocha-each": "^2.0.1",
    "pinst": "^2.1.6",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.11",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^5.0.0",
    "typescript": "~4.2.4"
  },
  "files": [
    "/contracts"
  ],
  "homepage": "https://github.com/hifi-finance/hifi-amm#readme",
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "keywords": [
    "amm",
    "blockchain",
    "ethereum",
    "hardhat",
    "hifi",
    "smart-contracts",
    "solidity"
  ],
  "license": "LGPL-3.0-or-later",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hifi-finance/hifi-amm"
  },
  "resolutions": {
    "@ethersproject/wallet": "^5.2.0",
    "@solidity-parser/parser": "^0.13.2"
  },
  "scripts": {
    "clean": "hardhat clean",
    "commit": "git-cz",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "lint": "yarn run lint:sol && yarn run lint:ts && yarn run prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config .prettierrc \"**/*.{js,json,md,sol,ts}\"",
    "test": "hardhat test",
    "typechain": "hardhat typechain"
  }
}
